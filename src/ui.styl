html, body
  width 100%
  height 100%
  margin 0
  padding 0
  overflow hidden
  font-family 'Open Sans', sans
  background-color #f9f9f9

.hidden
  display none

.error
  padding 20px
  background #ad0000
  color white

.ui
  box-sizing border-box
  position absolute
  bottom 0
  width 100%
  padding 15px 10px
  display flex
  justify-content space-around

  > button
    flex 0.2
